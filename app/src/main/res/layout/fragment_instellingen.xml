<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Instellingen_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Instellingen">

    <TableLayout
        android:layout_width="380dp"
        android:layout_height="522dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581">

        <TableRow
            android:id="@+id/Instellingen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Instellingen_tekst"
                android:layout_width="184dp"
                android:layout_height="47dp"
                android:text="Instellingen"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/Batterij_besparen"
            android:layout_width="353dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Batterij_besparen_tekst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batterij bezuinigen"
                android:textColor="@color/white" />

            <Space
                android:layout_width="59dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/aan_of_uit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Mode_donker_licht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licht/donker mode"
                android:textColor="@color/white" />

            <Space
                android:layout_width="76dp"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/licht_donker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Taal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Taal_instelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taal van app"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/wijzigknop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wijzig" />

        </TableRow>

        <TableRow
            android:id="@+id/Meldingen_optie"
            android:layout_width="313dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/melding_instelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meldingen"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:id="@+id/spam_meldingen_aan_of_uit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:id="@+id/Account_instellingen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/account_instel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/wijzigknop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wijzig" />
        </TableRow>

        <TableRow
            android:id="@+id/Help_instelling"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/help_tekst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/nodigknop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ga" />

        </TableRow>

        <TableRow
            android:id="@+id/log_uit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/log_uit_instelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log uit"
                android:textColor="@color/white" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/uitloggenknop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uitloggen" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>