<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".login">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inloggen bij Odido"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="239dp"
        android:layout_height="194dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/gebruikersnaam_tekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FAF8F8"
            android:drawableTint="#FAF6F6"
            android:ems="10"
            android:foregroundTint="#FFFDFD"
            android:hint="Gebruikersnaam"
            android:inputType="textPersonName"
            android:shadowColor="#FAF6F6"
            android:textColor="#FFFBFB"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/wachtwoord_tekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FAF8F8"
            android:ems="10"
            android:foregroundTint="#FFFFFF"
            android:hint="Wachtwoord"
            android:inputType="textPassword"
            android:textColor="#FBF9F9"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="#F6F4F4" />

        <Button
            android:id="@+id/button_maak_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maak Odido Account"
            android:textColor="#FDFAFA" />

    </LinearLayout>

    <ImageView
        android:id="@+id/odido_inlog_logo"
        android:layout_width="153dp"
        android:layout_height="128dp"
        android:src="@drawable/odido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <Button
        android:id="@+id/skiplogin"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="117dp"
        android:text="SKIP LOGIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>